<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:textSize="50dp"
        android:textColor="@color/colorPrimary"
        android:layout_weight="1"
        android:gravity="center"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"

        >
        <Button
            android:id="@+id/bounceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bounce"
            android:textSize="20dp"
            android:onClick="bounceClicked"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/fadeInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fade In"
            android:textSize="20dp"
            android:onClick="fadeInClicked"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"

        >
        <Button
            android:id="@+id/fadeOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fade Out"
            android:textSize="20dp"
            android:onClick="fadeOutClicked"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/rotateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate"
            android:textSize="20dp"
            android:onClick="rotateClicked"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"

        >
        <Button
            android:id="@+id/slideDownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SlideDown"
            android:textSize="20dp"
            android:onClick="slideDownClicked"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/slideUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slide Up"
            android:textSize="20dp"
            android:onClick="slideUpClicked"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal"

            >
            <Button
                android:id="@+id/zoomInButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zoom In"
                android:textSize="20dp"
                android:onClick="zoomInClicked"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_margin="10dp"
                />
            <Button
                android:id="@+id/zoomOutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zoom Out"
                android:textSize="20dp"
                android:onClick="zoomOutClicked"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_margin="10dp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>